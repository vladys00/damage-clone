<h1>this is the gallery slider</h1>
<div class="carousel js-flickity" data-flickity='{ "wrapAround": true, "autoPlay": 3000 }'>
  {% for block in section.blocks %}
    {% if block.settings.image %}
      <div class="carousel-cell">
        <img src="{{ block.settings.image | image_url: width: 800 }}" alt="Slide image">
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
    "name": "Image carousel",
    "settings": [],
    "presets": [
    {
      "name": "Gallery Slider"
    }
  ],
    "blocks": [
        {
            "type": "image",
            "name": "image slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id":"image",
                    "label": "Slide image"
                }
            ]
        }
    ]
}
{% endschema %} 