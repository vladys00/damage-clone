{{ 'header.css' | asset_url | stylesheet_tag }}
<div class="width" style="width:{{ settings.page-width }}px">
  <div class="header-flex">
      <a
    href="/"
    class="header-logo"
    style="max-width: {{ section.settings.logo_width }}px;">
    <img
      src="{{ section.settings.logo | image_url: width: section.settings.logo-width }}"
      alt="{{ shop.name }}"
      width="{{ section.settings.logo-width }}">
  </a>

  <button class="hamburguer">{% render 'hamburguer-menu' %}</button>

  <ul class="header-nav">
    {% for link in section.settings.navigation.links %}
    <li><a href="{{link.url}}">{{link.title}}</a></li>
    {% endfor %}
    <li><a  href="/cart">{% render 'shopping-cart' %}</a></li>
  </ul>
  </div>
</div>


{% schema %}
  {
    "name": "header",
    "tag": "header",
    "class": "header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "logo"
      },
       {
        "type": "range",
        "id": "logo-width",
        "label": "Logo width",
        "default": 100,
        "min": 20,
        "max": 300,
        "step": 5
      },
      {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}