{{ 'header.css' | asset_url | stylesheet_tag }}
<script src="{{ 'header.js' | asset_url }}" defer="defer"></script>

<div class="width">

  <div class="header-flex">
    <button id="hamburguer" class="hamburguer">{% render 'hamburguer-menu' %}</button>
    <a href="/" class="header-logo">
      <img
        src="{{ section.settings.logo | image_url: width: section.settings.logo-width }}"
        alt="{{ shop.name }}"
        height="{{ section.settings.logo-width }}">
    </a>
    <ul class="header-nav">
      {% for link in section.settings.navigation.links %}
        <li>
          <a href="{{link.url}}">{{ link.title }}</a>
          {% if link.links != blank %}
            <ul class="header-sub">
              {% for child in link.links %}
                <li class="header-sub-itme">
                  <a class="header-sub-anchor" href="{{child.url}}">{{ child.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
      <li class="cart-element">
        <a href="/cart">{% render 'shopping-cart' %}</a>
      </li>
    </ul>
  </div>
</div>

<div class="header-nav-overlay"></div>

<style>
  .header {
    padding: {{ section.settings.padding }}
    px 0;
  }
</style>

{% schema %}
  {
    "name": "header",
    "tag": "header",
    "class": "header",
    "settings": [
      {
        "type": "range",
        "id": "padding",
        "label": "Header height",
        "default": 35,
        "min": 5,
        "max": 100,
        "step": 1
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "logo"
      }, {
        "type": "range",
        "id": "logo-width",
        "label": "Logo width",
        "default": 300,
        "min": 20,
        "max": 300,
        "step": 5
      }, {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}